<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.timeSync.www.mapper.TbHolidaysMapper">
  <insert id="saveBatchHoliday">
    INSERT INTO tb_holidays(date)
    VALUES
    <foreach collection="holidaysList" separator="," item="day">
      (DATE(#{day}))
    </foreach>
  </insert>
  <select id="searchTodayIsHolidays" resultType="java.lang.Integer">
    SELECT id FROM tb_holidays WHERE date=CURRENT_DATE LIMIT 1;
  </select>
</mapper>
